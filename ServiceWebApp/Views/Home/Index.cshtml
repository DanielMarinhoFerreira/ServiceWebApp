@using ServiceWebApp.ViewModels
@model ViewUsuarioDto

<div class="container-fluid">
    <div class="form">
        <div class="card my-3">
            <div class="card-fluid">
                <p class="h5 text-center my-1">Usuario cadastro</p>
                <div class="table-responsive">
                    <table id="DATATABLE_USAURIO" class="table table-striped table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                    ID USUARIO</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                    NOME USUARIO</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                    SOBRENOME USUARIO</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                    EMAIL</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                    Edição</th>
                            </tr>
                        </thead>

                        @foreach (var usuario in Model.Usuarios.OrderBy(x => x.Id).ToList())
                        {
                            <tr>
                                <td>
                                    @usuario.Id
                                </td>
                                <td>
                                    @usuario.Name
                                </td>
                                <td>
                                    @usuario.Surname
                                </td>
                                <td>
                                    @usuario.Email
                                </td>
                                <td class="align-middle text-center text-sm">
                                    <div class="dropstart  float-lg ms-auto">
                                        <a href="javascript:;" class="cursor-pointer" id="dropdownTable2"
                                            data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </a>
                                        <ul class="dropdown-menu px-2 py-3 ms-sm-n4 ms-n5" aria-labelledby="dropdownTable2" style="">
                                            <li>
                                            <a class="dropdown-item border-radius-md"
                                            asp-controller="Home" asp-action="DeleteUsuario" asp-route-Id="@usuario.Id" method="post">Excluir</a>
                                            </li>
                                            <li><a asp-controller="Usuario" asp-action="EditableUsuario" asp-route-Id="@usuario.Id" class="dropdown-item border-radius-md">Editar</a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>